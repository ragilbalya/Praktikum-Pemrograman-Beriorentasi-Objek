<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="latihan.controller.MainController"
            prefWidth="700" prefHeight="450">

    <children>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Search field -->
            <TextField fx:id="searchField" promptText="Cari nama mahasiswa..." />

            <!-- Form section -->
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="80"/>
                </columnConstraints>

                <Label text="NPM:" GridPane.rowIndex="0"/>
                <TextField fx:id="npmField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nama:" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="GPA:" GridPane.rowIndex="2"/>
                <TextField fx:id="gpaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Button text="Simpan" onAction="#onAddClicked"
                        GridPane.rowIndex="3" GridPane.columnIndex="1"
                        GridPane.halignment="RIGHT"/>
            </GridPane>

            <!-- Table -->
            <TableView fx:id="tableView" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colNpm" text="NPM" prefWidth="120"/>
                    <TableColumn fx:id="colName" text="Nama" prefWidth="200"/>
                    <TableColumn fx:id="colGpa" text="GPA" prefWidth="80"/>
                    <TableColumn fx:id="colAction" text="Aksi" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </children>
</AnchorPane>